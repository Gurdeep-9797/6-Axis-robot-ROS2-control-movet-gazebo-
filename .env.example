# ========================================
# ROBOT SYSTEM CONFIGURATION
# ========================================

# Core Settings
ROBOT_MODE=SIM
ROBOT_NAME=robot_arm_01
ROS_DOMAIN_ID=42

# Controller Settings
CONTROLLER_TYPE=FAKE
CONTROLLER_IP=192.168.1.100
CONTROLLER_PORT=5000
CONTROLLER_PROTO=TCP
CONTROLLER_WATCHDOG_MS=10

# UI Settings
ENABLE_UI=true
UI_TYPE=web
UI_PORT=8080

# Simulation Settings
GAZEBO_HEADLESS=false
GAZEBO_WORLD=default.world
SIM_REAL_TIME=true

# Analysis Settings
ENABLE_ANALYSIS=false
ENABLE_ACCURACY_ANALYSIS=false
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Display (for GUI forwarding on Windows)
DISPLAY=host.docker.internal:0.0

# ROS 2 Settings
ROS_DISTRO=humble
RMW_IMPLEMENTATION=rmw_cyclonedds_cpp
