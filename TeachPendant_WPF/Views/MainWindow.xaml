<Window x:Class="TeachPendant_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="http://helix-toolkit.org/wpf"
        xmlns:viewmodels="clr-namespace:TeachPendant_WPF.ViewModels"
        mc:Ignorable="d"
        Title="FR-HMI Teach Pendant" Height="1080" Width="1920"
        WindowStyle="None" WindowState="Maximized" ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="{StaticResource Palette.Background.Medium}"
        Foreground="{StaticResource Palette.Text.Primary}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" CornerRadius="0" GlassFrameThickness="1" ResizeBorderThickness="6" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Icon Sidebar -->
            <ColumnDefinition Width="56"/>
            <!-- Content Area -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- ICON SIDEBAR (Slim vertical navigation)                    -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Column="0" Background="{StaticResource Palette.Background.Dark}" BorderBrush="#1A1D23" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- FR Brand at top -->
                <TextBlock DockPanel.Dock="Top" Text="FR" FontWeight="Bold" FontSize="22" Foreground="{StaticResource Palette.Primary.Brand}" 
                           HorizontalAlignment="Center" Margin="0,14,0,10"/>
                <Rectangle DockPanel.Dock="Top" Height="1" Fill="#383E4A" Margin="8,0"/>

                <!-- Nav Icons -->
                <StackPanel DockPanel.Dock="Top" Margin="0,8,0,0">
                    <Button Style="{StaticResource NavButton}" Content="ðŸ " FontSize="20" HorizontalContentAlignment="Center" Padding="0,10" ToolTip="Initialize"
                            Command="{Binding SwitchNavPageCommand}" CommandParameter="Initialize" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Style="{StaticResource NavButton}" Content="â–¤" FontSize="20" HorizontalContentAlignment="Center" Padding="0,10" ToolTip="Teaching" 
                            Command="{Binding SwitchNavPageCommand}" CommandParameter="Teaching" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Style="{StaticResource NavButton}" Content="âœ¦" FontSize="20" HorizontalContentAlignment="Center" Padding="0,10" ToolTip="Status"
                            Command="{Binding SwitchNavPageCommand}" CommandParameter="Status" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Style="{StaticResource NavButton}" Content="â˜·" FontSize="20" HorizontalContentAlignment="Center" Padding="0,10" ToolTip="Auxiliary"
                            Command="{Binding SwitchNavPageCommand}" CommandParameter="Auxiliary" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Style="{StaticResource NavButton}" Content="âš™" FontSize="20" HorizontalContentAlignment="Center" Padding="0,10" ToolTip="Settings"
                            Command="{Binding SwitchNavPageCommand}" CommandParameter="Settings" WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>

                <!-- Bottom: Transport Controls -->
                <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,10">
                    <Rectangle Height="1" Fill="#383E4A" Margin="8,0,8,8"/>
                    <Button Style="{StaticResource NavButton}" Content="â–¶" FontSize="18" HorizontalContentAlignment="Center" Padding="0,8" 
                            Foreground="#98C379" ToolTip="Run Program" Command="{Binding StartProgramCommand}" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Style="{StaticResource NavButton}" Content="â¹" FontSize="18" HorizontalContentAlignment="Center" Padding="0,8"
                            Foreground="#E06C75" ToolTip="Stop" Command="{Binding StopProgramCommand}" WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- MAIN CONTENT (Right of sidebar)                            -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- Top Bar -->
                <RowDefinition Height="48"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â• TOP STATUS BAR â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="{StaticResource Palette.Background.Dark}" BorderBrush="#383E4A" BorderThickness="0,0,0,1">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- State Badge -->
                        <Border Background="#2A2D35" CornerRadius="4" Padding="10,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#555"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding GlobalState.IsRunning}" Value="True">
                                                    <Setter Property="Fill" Value="#98C379"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding GlobalState.ExecutionStateText}" Foreground="#ABB2BF" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Mode Toggle -->
                        <Button Style="{StaticResource IndustrialButton}" Padding="8,3" Margin="0" WindowChrome.IsHitTestVisibleInChrome="True"
                                Command="{Binding GlobalState.ToggleModeCommand}">
                            <TextBlock Text="{Binding GlobalState.ModeDisplayText}" Foreground="#56B6C2" FontWeight="Bold" FontSize="11"/>
                        </Button>

                        <Rectangle Width="1" Fill="#383E4A" Margin="10,10"/>

                        <!-- Tool / WObj -->
                        <TextBlock Text="{Binding GlobalState.ActiveToolName}" Foreground="#8B919D" FontSize="11" VerticalAlignment="Center" Margin="4,0"/>
                        <TextBlock Text="â”‚" Foreground="#383E4A" VerticalAlignment="Center" Margin="4,0"/>
                        <TextBlock Text="{Binding GlobalState.ActiveWorkObjectName}" Foreground="#8B919D" FontSize="11" VerticalAlignment="Center" Margin="4,0"/>

                        <Rectangle Width="1" Fill="#383E4A" Margin="10,10"/>

                        <!-- Speed -->
                        <TextBlock Text="{Binding GlobalState.SpeedOverridePercent, StringFormat='{}{0:F0}%'}" Foreground="#E5C07B" FontWeight="Bold" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Center: Active Page Label -->
                    <TextBlock Grid.Column="1" Text="{Binding ActiveNavPage}" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#5C6370" FontSize="12" FontWeight="SemiBold"/>

                    <!-- Right: Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource IndustrialButton}" WindowChrome.IsHitTestVisibleInChrome="True" Content="ðŸ—•" Width="32" Height="28" FontSize="12" Padding="0" Command="{Binding MinimizeWindowCommand}"/>
                        <Button Style="{StaticResource IndustrialButton}" WindowChrome.IsHitTestVisibleInChrome="True" Content="ðŸ——" Width="32" Height="28" FontSize="12" Padding="0" Command="{Binding MaximizeWindowCommand}"/>
                        <Button Style="{StaticResource IndustrialButton}" WindowChrome.IsHitTestVisibleInChrome="True" Content="âœ•" Width="32" Height="28" FontSize="12" Padding="0" Command="{Binding CloseWindowCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â• CONTENT AREA â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!-- WorkTree / Content Panel -->
                    <ColumnDefinition Width="300"/>
                    <!-- Splitter -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Right: 3D + Parameters -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- LEFT PANEL: WorkTree + Command Palette          -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Grid Grid.Column="0" Background="{StaticResource Palette.Background.Panel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- WORK TREE (Hierarchical Project Browser) -->
                    <Border Grid.Row="0" Margin="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tree Header + Toolbar -->
                            <Border Grid.Row="0" Background="#EDF0F5" Padding="10,0" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                                <DockPanel>
                                    <TextBlock Text="Project Explorer" FontWeight="Bold" Foreground="#333" FontSize="12" VerticalAlignment="Center"/>
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Style="{StaticResource PaletteButton}" Content="ðŸ“„" Width="24" Height="24" FontSize="12" Margin="1" ToolTip="New Program"
                                                Command="{Binding NewProgramCommand}"/>
                                        <Button Style="{StaticResource PaletteButton}" Content="ï¼‹" Width="24" Height="24" FontSize="14" Margin="1" ToolTip="Add Point"
                                                Command="{Binding WorkTree.AddPointCommand}"/>
                                        <Button Style="{StaticResource PaletteButton}" Content="ðŸ—‘" Width="24" Height="24" FontSize="12" Margin="1" ToolTip="Delete Selected"
                                                Command="{Binding WorkTree.DeleteSelectedCommand}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>

                            <!-- TreeView -->
                            <TreeView Grid.Row="1" Background="Transparent" BorderThickness="0" 
                                      ItemsSource="{Binding WorkTree.RootNodes}" Margin="0" Padding="4">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource TreeItemStyle}">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal" Margin="2,2">
                                            <StackPanel.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Edit" FontSize="12"/>
                                                    <MenuItem Header="Delete" FontSize="12"
                                                              Command="{Binding DataContext.WorkTree.DeleteSelectedCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                    <MenuItem Header="Duplicate" FontSize="12"/>
                                                    <Separator/>
                                                    <MenuItem Header="Set Speed..." FontSize="12"/>
                                                    <MenuItem Header="Set Blend Radius..." FontSize="12"/>
                                                    <MenuItem Header="Convert Motion Type" FontSize="12">
                                                        <MenuItem Header="PTP" FontSize="12"/>
                                                        <MenuItem Header="LIN" FontSize="12"/>
                                                        <MenuItem Header="ARC" FontSize="12"/>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </StackPanel.ContextMenu>
                                            <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}" FontSize="12" Foreground="#333" VerticalAlignment="Center" FontWeight="Medium"/>
                                            <Border Background="#E8EDF5" CornerRadius="3" Padding="6,1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Value}" FontSize="10" Foreground="#5C6BC0"/>
                                            </Border>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                    </Border>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" Background="#DDD" ResizeDirection="Rows"/>

                    <!-- COMMAND PALETTE -->
                    <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#EDF0F5" Padding="10,0" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                                <TextBlock Text="Commands" FontWeight="Bold" Foreground="#333" FontSize="12" VerticalAlignment="Center"/>
                            </Border>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <UniformGrid Columns="4" Margin="6">
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding AddInstructionCommand}" CommandParameter="PTP">
                                        <StackPanel>
                                            <TextBlock Text="â¤µ" FontSize="16" HorizontalAlignment="Center" Foreground="#4A90E2"/>
                                            <TextBlock Text="PTP" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding AddInstructionCommand}" CommandParameter="LIN">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ“" FontSize="14" HorizontalAlignment="Center" Foreground="#4A90E2"/>
                                            <TextBlock Text="LIN" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding AddInstructionCommand}" CommandParameter="ARC">
                                        <StackPanel>
                                            <TextBlock Text="â—œ" FontSize="18" HorizontalAlignment="Center" Foreground="#4A90E2"/>
                                            <TextBlock Text="ARC" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding AddInstructionCommand}" CommandParameter="WAIT">
                                        <StackPanel>
                                            <TextBlock Text="â±" FontSize="14" HorizontalAlignment="Center" Foreground="#888"/>
                                            <TextBlock Text="Wait" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding AddInstructionCommand}" CommandParameter="SETDO">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ”Œ" FontSize="14" HorizontalAlignment="Center" Foreground="#888"/>
                                            <TextBlock Text="I/O" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding AddInstructionCommand}" CommandParameter="WHILE">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ”ƒ" FontSize="14" HorizontalAlignment="Center" Foreground="#888"/>
                                            <TextBlock Text="Loop" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding SaveProgramToDbCommand}">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ’¾" FontSize="14" HorizontalAlignment="Center" Foreground="#E5C07B"/>
                                            <TextBlock Text="Save" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource PaletteButton}" Margin="2" Height="48"
                                            Command="{Binding RobotVM.GoHomeCommand}">
                                        <StackPanel>
                                            <TextBlock Text="ðŸ " FontSize="14" HorizontalAlignment="Center" Foreground="#56B6C2"/>
                                            <TextBlock Text="Home" FontSize="9" HorizontalAlignment="Center" Foreground="#555"/>
                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <!-- VERTICAL SPLITTER -->
                <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#DDD"/>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- RIGHT: 3D VIEWPORT (landscape) + PARAMETERS    -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <!-- 3D Viewport (landscape, dominant) -->
                        <RowDefinition Height="*"/>
                        <!-- Bottom Parameters -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="280"/>
                    </Grid.RowDefinitions>

                    <!-- 3D VIEWPORT (LANDSCAPE at top right) -->
                    <Border Grid.Row="0" Background="#F0F2F5" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                        <Grid>
                            <hx:HelixViewport3D ShowCoordinateSystem="True" ShowFrameRate="False" ZoomExtentsWhenLoaded="True" Background="Transparent"
                                                ShowViewCube="True">
                                <hx:DefaultLights/>
                                <!-- Grid floor -->
                                <hx:GridLinesVisual3D Width="2" Length="2" Thickness="0.002" MinorDistance="0.1" MajorDistance="0.5" Fill="#30888888"/>
                                <ModelVisual3D x:Name="RobotModelVisual"/>
                            </hx:HelixViewport3D>

                            <!-- Viewport overlay: TCP readout -->
                            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Background="#E8FFFFFF" CornerRadius="6" Padding="12,8"
                                    BorderBrush="#DDD" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="TCP Position" FontWeight="Bold" Foreground="#333" FontSize="11" Margin="0,0,0,4"/>
                                    <UniformGrid Columns="3" Rows="2">
                                        <TextBlock Text="{Binding CurrentState.J1, StringFormat='J1: {0:F1}Â°'}" Foreground="#555" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding CurrentState.J2, StringFormat='J2: {0:F1}Â°'}" Foreground="#555" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding CurrentState.J3, StringFormat='J3: {0:F1}Â°'}" Foreground="#555" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding CurrentState.J4, StringFormat='J4: {0:F1}Â°'}" Foreground="#555" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding CurrentState.J5, StringFormat='J5: {0:F1}Â°'}" Foreground="#555" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding CurrentState.J6, StringFormat='J6: {0:F1}Â°'}" Foreground="#555" FontSize="10" Margin="2"/>
                                    </UniformGrid>
                                    <Rectangle Height="1" Fill="#DDD" Margin="0,4"/>
                                    <UniformGrid Columns="3">
                                        <TextBlock Text="{Binding RobotVM.TcpX, StringFormat='X: {0:F1}'}" Foreground="#4A90E2" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding RobotVM.TcpY, StringFormat='Y: {0:F1}'}" Foreground="#4A90E2" FontSize="10" Margin="2"/>
                                        <TextBlock Text="{Binding RobotVM.TcpZ, StringFormat='Z: {0:F1}'}" Foreground="#4A90E2" FontSize="10" Margin="2"/>
                                    </UniformGrid>
                                </StackPanel>
                            </Border>

                            <!-- Viewport overlay: Line Number -->
                            <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Background="#E8FFFFFF" CornerRadius="6" Padding="10,6"
                                    BorderBrush="#DDD" BorderThickness="1">
                                <TextBlock Text="{Binding ProgramVM.ActiveLineNumber, StringFormat='Line: {0}'}" FontWeight="Bold" Foreground="#E06C75" FontSize="11"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- SPLITTER -->
                    <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" Background="#DDD" ResizeDirection="Rows"/>

                    <!-- â•â•â•â•â•â•â• BOTTOM PARAMETER PANEL â•â•â•â•â•â•â• -->
                    <Border Grid.Row="2" Background="{StaticResource Palette.Background.Panel}" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                        <TabControl Background="Transparent" BorderThickness="0" Margin="4" TabStripPlacement="Top">

                            <!-- JOINT JOG -->
                            <TabItem Header="ðŸ”§ Joint Jog" FontSize="11" Padding="8,4">
                                <Grid Margin="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Sliders -->
                                    <ItemsControl Grid.Column="0" ItemsSource="{Binding RobotVM.JointSliders}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="2"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="26"/>
                                                        <ColumnDefinition Width="28"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="28"/>
                                                        <ColumnDefinition Width="50"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" Foreground="#333" FontWeight="Bold" FontSize="11"/>
                                                    <Button Grid.Column="1" Content="âˆ’" FontSize="14" Padding="0" Height="22"
                                                            Command="{Binding DataContext.JogJointCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding Name, StringFormat='-{0}'}"
                                                            Style="{StaticResource PaletteButton}" Foreground="#E06C75"/>
                                                    <Slider Grid.Column="2" Minimum="{Binding Min}" Maximum="{Binding Max}" Value="{Binding Angle, Mode=TwoWay}" 
                                                            Margin="4,0" VerticalAlignment="Center"/>
                                                    <Button Grid.Column="3" Content="+" FontSize="14" Padding="0" Height="22"
                                                            Command="{Binding DataContext.JogJointCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding Name, StringFormat='+{0}'}"
                                                            Style="{StaticResource PaletteButton}" Foreground="#98C379"/>
                                                    <TextBox Grid.Column="4" Text="{Binding Angle, StringFormat=N1}" Margin="2,0,0,0" 
                                                             Background="#FFF" Foreground="#333" BorderBrush="#CCC" FontSize="10" VerticalContentAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Speed / Accel -->
                                    <StackPanel Grid.Column="1" Margin="12,4">
                                        <TextBlock Text="Speed" Foreground="#666" FontSize="10"/>
                                        <Grid Margin="0,2,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="24"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding RobotVM.SpeedPercent, Mode=TwoWay}" Background="#FFF" Foreground="#333" FontSize="11"/>
                                            <TextBlock Grid.Column="1" Text="%" Foreground="#888" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10"/>
                                        </Grid>
                                        <TextBlock Text="Accel" Foreground="#666" FontSize="10"/>
                                        <Grid Margin="0,2,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="30"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding RobotVM.Acceleration, Mode=TwoWay}" Background="#FFF" Foreground="#333" FontSize="11"/>
                                            <TextBlock Grid.Column="1" Text="Â°/sÂ²" Foreground="#888" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="10"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- TOOL TCP -->
                            <TabItem Header="ðŸ“Œ Tool" FontSize="11" Padding="8,4">
                                <Grid Margin="12,8">
