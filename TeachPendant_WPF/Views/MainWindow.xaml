                                        <TextBlock Text="Y" Foreground="#666" FontSize="10"/>
                                        <TextBox Text="{Binding SettingsVM.BaseOffsetY}" Width="80" Background="#FFF" Foreground="#333" Margin="0,2,0,6"/>
