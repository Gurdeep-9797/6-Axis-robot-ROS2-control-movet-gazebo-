<Application x:Class="TeachPendant_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Global Colors defined from the FR-HMI Image -->
        <SolidColorBrush x:Key="Palette.Background.Dark" Color="#21252B"/>
        <SolidColorBrush x:Key="Palette.Background.Medium" Color="#282C34"/>
        <SolidColorBrush x:Key="Palette.Background.Light" Color="#E5E8EB"/>
        
        <SolidColorBrush x:Key="Palette.Text.Primary" Color="#ABB2BF"/>
        <SolidColorBrush x:Key="Palette.Text.Highlight" Color="#98C379"/>
        <SolidColorBrush x:Key="Palette.Primary.Brand" Color="#F28E2B"/> <!-- FR Orange -->
        
        <!-- Base Styles -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource Palette.Background.Medium}" />
            <Setter Property="Foreground" Value="{StaticResource Palette.Text.Primary}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- Industrial Button Style -->
        <Style x:Key="IndustrialButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3D4450" Offset="0.0"/>
                        <GradientStop Color="#282C34" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{StaticResource Palette.Text.Primary}"/>
            <Setter Property="BorderBrush" Value="#1E2227"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Name="border">
                            <!-- Subtle Elevation -->
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4A5260" Offset="0.0"/>
                                            <GradientStop Color="#3D4450" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#21252B"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Padding" Value="2,2,0,0"/>
                                <!-- Invert Shadow to look pressed -->
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="1" ShadowDepth="0" Opacity="0" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
